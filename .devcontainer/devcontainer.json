{
	"name": "Codespaces and Websockets",
	"image": "mcr.microsoft.com/devcontainers/universal:linux",

	"extensions": [
		"ms-python.python"
	],

	"portsAttributes": {
		"3000": {
			"label": "Webserver",
			"onAutoForward": "notify"
		}
	},

	"postCreateCommand": "pip3 install -r requirements.txt",
}
